generator client {
  provider = "prisma-client-js"
}

model Invite {
  id             String   @id @default(cuid())
  token          String   @unique
  email          String? // Optional now (for generic invites)
  organizationId String
  role           String   @default("STUDENT")
  expiresAt      DateTime

  maxUses    Int? // Null = unlimited
  usageCount Int  @default(0)

  groupId String? // Optional link to group

  createdAt DateTime @default(now())
}

datasource db {
  provider = "sqlite"
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  type      String // "LanguageSchool", "School", "University", "SportsClub", "Custom"
  country   String?
  currency  String   @default("USD")
  createdAt DateTime @default(now())
  users     User[]
  groups    Group[]
  tasks     Task[]

  modulesConfig String @default("{}")
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  password       String // Hashed
  name           String
  role           String // "OWNER", "ADMIN", "TEACHER", "STUDENT", "PARENT"
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  birthDate DateTime?
  managed   Boolean   @default(false)

  // Relations
  memberships   GroupMembership[] // Explicit relation for students/members
  teacherGroups Group[] // One-to-many for teachers (as main teacher)

  attendance  Attendance[]
  payments    Payment[]
  submissions Submission[]

  createdAt DateTime @default(now())
}

model Group {
  id             String       @id @default(uuid())
  name           String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])

  teacherId String?
  teacher   User?   @relation(fields: [teacherId], references: [id])

  memberships GroupMembership[]

  schedule String? // e.g., "Mon,Wed 10:00"

  attendance Attendance[]
  tasks      Task[]
}

model GroupMembership {
  id       String   @id @default(cuid())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  groupId  String
  group    Group    @relation(fields: [groupId], references: [id])
  status   String   @default("PENDING") // "PENDING", "ACTIVE", "SUSPENDED"
  joinedAt DateTime @default(now())

  @@unique([userId, groupId])
}

model Attendance {
  id      String   @id @default(uuid())
  date    DateTime
  status  String // "PRESENT", "ABSENT", "LATE", "SICK"
  userId  String
  user    User     @relation(fields: [userId], references: [id])
  groupId String
  group   Group    @relation(fields: [groupId], references: [id])
}

model Payment {
  id        String   @id @default(uuid())
  amount    Float
  currency  String
  status    String // "PAID", "PENDING", "OVERDUE"
  dueDate   DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model Task {
  id             String       @id @default(uuid())
  title          String
  description    String?
  deadline       DateTime?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  groupId        String?
  group          Group?       @relation(fields: [groupId], references: [id])

  submissions Submission[]
}

model Submission {
  id      String  @id @default(uuid())
  content String?
  grade   String?
  status  String // "SUBMITTED", "GRADED", "PENDING"
  userId  String
  user    User    @relation(fields: [userId], references: [id])
  taskId  String
  task    Task    @relation(fields: [taskId], references: [id])
}
